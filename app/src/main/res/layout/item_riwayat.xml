<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tanggal Riwayat: 01-01-2024"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/md_theme_inverseSurface_highContrast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_fertilizer"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="• Nama Tanaman: Padi\n• Kandungan Nitrogen: 2%\n• Kandungan Fosfor: 1%\n• Kandungan Kalium: 1.5%\n• Temperatur: 25°C\n• Kelembapan: 60%"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/md_theme_inverseSurface_highContrast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintEnd_toStartOf="@id/img_fertilizer"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/tv_recommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rekomendasi Pupuk: Urea"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/md_theme_inverseSurface_highContrast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details"
            app:layout_constraintEnd_toStartOf="@id/img_fertilizer"
            app:layout_constraintHorizontal_bias="0" />

        <ImageView
            android:id="@+id/img_fertilizer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Gambar Pupuk"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fertilizer_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
